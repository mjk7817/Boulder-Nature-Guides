<body>
    <header>
        <div class="navbar">
            <img src="logo.png" class="background" alt="">

            <ul class="menu">
                <li><a href="index.html">Home</a></li>
                <li><a href="resources.html">Resources</a></li>
                <li><a href="map.html">Map</a></li>
                <li><a href="contact.html">Contact</a></li>
                <li><a href="login.html">Login</a></li>
            </ul>
        </div>

        <div id="mapTitle">
            <h1>Welcome to the Map</h1>
        </div>

        <div id="mapDiv" style="width: 800px; height: 450px; margin-left: 320px; margin-top: 85px"></div>
           
        <%
        if(mapPoint){
        var map = '';
        var marker = ''
        mapPoint.forEach(function(item){
            map += 'L.map('mapDiv').setView(['+ item.lat + ','+ item.lon + '], 13)';
            map += 'L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors', maxZoom: 18, }).addTo(map)';
                // add marker to the map
                map += 'L.marker([' + item.lat ',' + item.lon + ']).addTo(map)';
                // add popup to the marker
                map += 'marker.bindPopup("<b>Boulder</b><br />Colorado")';
                map += 'marker.on ('mouseover', function(event) { this.openPopup();})';
                map += 'marker.on ('mouseout', function(event) { this.closePopup(); })';
        }); %>
        <%- map %>
   <% } %>

            
            
    </header>

    

</body>

